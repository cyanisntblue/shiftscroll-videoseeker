{
  "manifest_version": 3,
  "name": "Shift+Scroll Video Seeker",
  "version": "1.0",
  "description": "Scroll while holding Shift to seek in videos",
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
